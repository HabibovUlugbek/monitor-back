{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    "baseUrl": "./src",
    "moduleResolution": "Node",
    "lib": [
      "ESNext"
    ],
    "paths": {
      "@logger": [
        "./logger"
      ],
      "@clients": [
        "./clients"
      ],
      "@configs": [
        "./configs"
      ],
      "@helpers": [
        "./helpers"
      ],
      "@modules": [
        "./modules"
      ],
      "@constants": [
        "./constants"
      ],
      "@interfaces": [
        "./interfaces"
      ],
      "@validators": [
        "./validators"
      ],
      "@exceptions": [
        "./exceptions"
      ],
      "@interceptors": [
        "./interceptors"
      ],
    },
     "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "importHelpers": true,
    "strictNullChecks": false,
  },
  "exclude": [
    "**/*.int-spec.ts",
    "**/*.e2e-spec.ts"
  ]
}